@model Tour_Management.Models.Spot

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4 mb-4 col-md-8 mx-auto">
    <h3 class=" card-header alert alert-danger">Are you sure you want to delete this?</h3>
    <div class="card-body">

        <p m-10> <span class="fw-bold">@Html.DisplayNameFor(x => x.SpotName) : </span> @Html.DisplayFor(x => x.SpotName)</p>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color d-flex justify-content-end">
                <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
            </div>
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index")" id="bnCreate btn-primary btn-sm" class="btn"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>
