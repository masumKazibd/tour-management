<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.7.1.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success" style="font-weight:bold;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img style="height: 30px; width: 30px; border-radius: 25px;" src="~/Content/Image/Tour.png" />TMS
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Client", "Index", "Client", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Spot", "Index", "Spot", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>

    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid">
        <p class="text-center">&copy; @DateTime.Now.Year - www.masumkazi.com</p>
    </footer>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
            $("#btnPlus").click(function (e) {
                e.preventDefault();
                var spotContainer = $("#spotContainer");
                $.ajax({
                    url: "/Client/AddNewSpot",
                    type: "GET",
                    success: function (data) {
                        spotContainer.append(data);
                    }
                });
                $(document).on("click", "#btnDeleteSpot", function (e) {
                    $(this).parent().parent().remove();
                })
            })
        </script>
</body>
</html>
