@model IEnumerable<Tour_Management.Models.Client>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-2 mb-2">
    <div class="card-header">
        <h3>Client Information</h3>
        <p class="text-muted">that make sure your everything tour runs smoothly</p>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create", "Client")" class="btn"><i class="fa fa-plus"></i> New Client</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped bg-primary">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.ClientName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.MaritalStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Picture)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.ClientName)</td>
                        <td>@Html.DisplayFor(x => item.Age)</td>
                        <td>@Html.DisplayFor(x => item.MaritalStatus)</td>
                        <td><img src="@item.Picture" style="height: 30px; width: 30px; border-radius: 25px;" /></td>
                        <td>
                            <a href="@Url.Action("Edit","Client", new {id=item.ClientId})" class="btn btn-success btn-sm me-2"><i class="fa fa-edit"></i></a>
                            <a href="@Url.Action("Delete","Client", new {id=item.ClientId})" class="btn btn-danger btn-sm me-2"><i class="fa fa-trash"></i></a>
                            <a href="@Url.Action("Details","Client", new{id=item.ClientId}) " class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-end">
            <ul class="pagination pagination-sm">
                @for (int i = 1; i <= ViewBag.totalPages; i++)
                {
                    <li class='page-item @(ViewBag.currentPage==i?"active":"")'>
                        @Html.ActionLink(i.ToString(), "Index", new { page = i }, new { @class = "page-link" })
                    </li>
                }
            </ul>
        </div>
    </div>
</div>